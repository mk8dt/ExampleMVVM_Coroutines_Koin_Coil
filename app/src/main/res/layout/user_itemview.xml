<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/bg_itemview"
        android:layout_marginBottom="16dp">

    <ImageView
            android:id="@+id/imageUserItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_user_placeholder"/>

    <TextView
            android:id="@+id/nameUserItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@id/imageUserItem"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="PEPE"/>

    <TextView
            android:id="@+id/lastNameUserItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/nameUserItem"
            app:layout_constraintLeft_toRightOf="@id/imageUserItem"
            tools:text="RAMIREZ ANTON"/>

    <TextView
            android:id="@+id/phoneUserItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toRightOf="@id/imageUserItem"
            app:layout_constraintTop_toBottomOf="@id/lastNameUserItem"
            tools:text="632598741"/>

</androidx.constraintlayout.widget.ConstraintLayout>